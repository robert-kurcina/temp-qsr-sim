{
  "attack": {
    "melee": {
      "condition": "target.inMeleeRange() && attacker.hasWeaponClass('Melee')",
      "action": "rollHitTest(attacker.cca, target.ref)",
      "modifiers": [
        { "if": "attacker.hasTrait('Fight')", "apply": "+1b to Hit Test" }
      ]
    },
    "ranged": {
      "condition": "los.exists && distance <= weapon.or",
      "action": "rollHitTest(attacker.rca, target.ref)",
      "modifiers": [
        { "if": "target.inCover()", "apply": "-1m to Hit Test" }
      ]
    }
  }
}